{
    // https://github.com/rebornix/vscode-project-snippet
    // https://code.visualstudio.com/docs/editor/userdefinedsnippets
    "Copyright file header": {
        "prefix": "sayo-copy",
        "body": [
            "/*",
            " * Copyright 2018 (c) The Sayonika Project Authors",
            " * Licensed under BSD-3-Clause",
            " */"
        ],
        "description": "Sayonika copyright header"
    },
    "Route signature": {
        "prefix": "route-sig",
        "body": [
            "async (req: Request, res: Response) => {",
            "\t$1",
            "}"
        ],
        "description": "General function signature for Express routes"
    },
    "Middleware signature": {
        "prefix": "middleware-sig",
        "body": [
            "async (req: Request, res: Response, next: NextFunction) => {",
            "\t$1",
            "}"
        ],
        "description": "General function signature for Express middleware"
    }
}

{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6",
            "es7"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ]
}